{% extends "block.html.twig" %}
{#
/**
 * @file
 * TW Theme's theme implementation for a branding block.
 *
 * Each branding element variable (logo, name, slogan) is only available if
 * enabled in the block configuration.
 *
 * Available variables:
 * - site_logo: Logo for site as defined in Appearance or theme settings.
 * - site_name: Name for site as defined in Site information settings.
 * - site_slogan: Slogan for site as defined in Site information settings.
 */
#}
{% set attributes = attributes.addClass('site-branding') %}
{% set attributes = attributes.addAttrbute('style', 'width:100$;') %}
{% block content %}
  <div style="display:flex;flex-flow:row wrap;">
  {% if site_logo %}
  <div style="flex:1;">
    <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="site-branding__logo">
      <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
    </a>
    </div>
  {% endif %}
  {% if site_name or site_slogan %}
    <div class="site-branding__text" style="flex:4;">
      {% if site_name %}
        <div class="site-branding__name" style="color:#fffeff;">
          {{ site_name }}
        </div>
      {% endif %}
      {% if site_slogan %}
        <div class="site-branding__slogan">{{ site_slogan }}</div>
      {% endif %}
    </div>
  {% endif %}
  <div style="flex:1;margin:auto;">
    <img src="http://tw.rpi.edu/media/latest/Rensselaer-Logo-with-Tagline-RGB-White.png" style="width:200px;" alt="Rensselaer Polytechnic Institute" />
  </div>
  </div>
{% endblock %}
