PREFIX vivo: <http://vivoweb.org/ontology/core#>
PREFIX scires: <http://vivoweb.org/ontology/scientific-research#>

SELECT ?Project ?Project_Investigator ?Email
WHERE
{
      ?project a vivo:Project .
      ?project rdfs:label ?project_label .
      {?project obo:BFO_0000055 ?role . } UNION {?project vivo:contributingRole ?role . }
      {?role rdfs:label "Project Investigator" . } UNION {?role rdfs:label "Project Investigator"^^xsd:string . }
      ?role obo:RO_0000052 ?person .
      ?person rdfs:label ?pi .
      ?person obo:ARG_2000028 [vcard:hasEmail [vcard:email ?email]] .
      BIND(str(?project_label) as ?Project)
      BIND(str(?pi) as ?Project_Investigator)
      BIND(str(?email) as ?Email)
} 
